<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-4.3.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">
	<context:component-scan base-package="com.sy" />
	<mvc:annotation-driven enable-matrix-variables="true" content-negotiation-manager="contentNegotiationManager"/>
	<context:annotation-config />
	<!--跨域-->
	<mvc:cors>
		<mvc:mapping path="/**" allowed-origins="*"
			allowed-methods="GET,PUT,DELETE,POST" allowed-headers="ContentType" allow-credentials="false" max-age="60000" />
	</mvc:cors>
	<bean id="contentNegotiationManager" class="org.springframework.web.accept.ContentNegotiationManagerFactoryBean">
		<property name="mediaTypes">
			<value>
				json=application/json
				html=text/html
			</value>
		</property>
	</bean>
	<!--试图解析-->
	<mvc:view-resolvers>
		<mvc:content-negotiation>
			<mvc:default-views>
				<bean class="org.springframework.web.servlet.view.json.MappingJackson2JsonView" p:contentType="application/json">
					<property name="encoding" value="UTF8"/>
				</bean>
			</mvc:default-views>
		</mvc:content-negotiation>
		<mvc:freemarker cache-views="true"/>
	</mvc:view-resolvers>

	<mvc:freemarker-configurer>
		<mvc:template-loader-path location="classpath*:/templates/"/>
	</mvc:freemarker-configurer>
	<!--静态资源-->
	<mvc:resources mapping="/**" location="classpath:/static/,classpath:/public/" cache-period="31556926" />
</beans>